.btn{
  position: absolute;
  top: 50%;left: 50%;
  width: 700rpx;
  height: 100rpx;
  margin-top: -50rpx;
  margin-left: -350rpx;
  line-height: 100rpx;
}
.avatar_box{
  width: 750rpx;
  position: relative;
  height: 350rpx;
  overflow: hidden;
}
.avatar_box>.avatar_bg{
  width: 750rpx;
  height: 750rpx;
  filter: blur(40px);
}
.avatar_box>.avatar_info{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 50%;left: 50%;
  margin-top: -100rpx;
  margin-left: -100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.avatar_box>.avatar_info>.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
}
.avatar_box>.avatar_info>view{
  text-align: center;
  color: #ddd;
}
.like{
  width: 700rpx;
  height: 100rpx;
  margin: 0 auto;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.like>view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.like>view>view:first-child{
  text-align: center;
  color: #d81e06;
  font-size: 30rpx;
}
.order{
  width: 700rpx;
  height: 250rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
}
.order>.order_title{
  color: #666;
  padding: 20rpx;
  font-size: 40rpx;
  border-bottom: 1rpx solid #666;
  height: 60rpx;
  line-height: 60rpx;
}
.order_box{
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}
.order_box>view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.order_box>view>image{
  width: 50rpx;
  height: 50rpx;
}
.address,.contact{
  width: 700rpx;
  height: 80rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.contact{
  display: flex;
  justify-content: space-between;
}